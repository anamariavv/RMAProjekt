<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:textSize="12pt"
        android:layout_marginTop="30dp"
        android:textAlignment="center"/>


    <EditText
        android:id="@+id/registerName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/register_name"
        android:inputType="textPersonName" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/registerLastname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerName"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/register_lastname" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/registerUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerLastname"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/register_username" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/registerEmailAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:layout_below="@id/registerUsername"
        android:hint="@string/register_email"/>

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/register_password"
        android:inputType="textPassword" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/registerConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerPassword"
        android:hint="@string/register_confirm_password"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerConfirmPassword"
        android:layout_marginTop="20dp"/>

</RelativeLayout>