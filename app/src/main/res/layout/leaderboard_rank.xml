<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/leaderboard_number"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textAlignment="gravity"/>

    <TextView
        android:id="@+id/leaderboard_summoner"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Summoner name"
        android:textAlignment="gravity"/>

    <TextView
        android:id="@+id/leaderboard_rank"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="I"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/leaderboard_wins"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="200"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/leaderboard_losses"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="200"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/leaderboard_lp"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1000"
        android:textAlignment="gravity" />


    <ImageView
        android:id="@+id/leaderboard_hotstreak"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:baselineAlignBottom="true" />
</LinearLayout>