<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewForumTopicFragment">

    <TextView
        android:id="@+id/new_forum_topic_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Add a new forum topic"
        android:textAlignment="center"
        android:textSize="20dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_forum_topic_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_forum_topic_header"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp">
        <EditText
            android:id="@+id/new_forum_topic_title"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top"
            android:hint="Enter topic title"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_forum_topic_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_forum_topic_title_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/new_forum_topic_text"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top"
            android:hint="Enter text here"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/new_forum_topic_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_forum_topic_text_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Post" />

</RelativeLayout>