<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCommentFragment">

    <TextView
        android:id="@+id/forum_topic_id_add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/add_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a comment"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/add_comment_title"
        android:layout_marginTop="80dp">
        <EditText
            android:id="@+id/add_comment_text"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="top"
            android:hint="Enter comment"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/post_comment_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_comment_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Post" />

</RelativeLayout>